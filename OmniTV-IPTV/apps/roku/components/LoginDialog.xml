<?xml version="1.0" encoding="UTF-8"?>
<component name="OmniLoginDialog" extends="Group">
  <interface>
    <field id="onLogin" type="void" alwaysNotify="true" />
  </interface>
  <children>
    <Rectangle id="bg" width="1920" height="1080" color="0x000000AA" />
    <Label id="title" translation="[600,200]" text="Login Xtream" font="font:MediumBoldSystemFont" />
    <TextEditBox id="host" translation="[600,300]" hintText="Host/URL" width="720" />
    <TextEditBox id="user" translation="[600,380]" hintText="Username" width="720" />
    <TextEditBox id="pass" translation="[600,460]" hintText="Password" secureMode="true" width="720" />
    <Button id="submit" translation="[600,540]" width="240" height="80" text="Entrar" />
  </children>
</component>
